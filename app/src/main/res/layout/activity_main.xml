<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="433dp"
        android:layout_above="@id/LayoutLogin"
        android:layout_marginBottom="-338dp"
        app:srcCompat="@drawable/fondo" />

    <TextView
        android:id="@+id/textGarrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoIcon"
        android:layout_centerInParent="true"
        android:layout_marginTop="-60dp"
        android:text="GarrApp" />

    <ImageView
        android:id="@+id/logoIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/LayoutLogin"
        android:layout_centerInParent="true"
        android:layout_marginBottom="80dp"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/LayoutLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/inicioperson" />

        <EditText
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="usuario" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LayoutLogin"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/iniciocandado" />

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:text="" />

    </LinearLayout>

    <Button
        android:id="@+id/ingresar"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/LayoutLogin"
        android:layout_centerInParent="true"
        android:layout_marginTop="75dp"
        android:backgroundTint="#F6FBF9"
        android:onClick="PrincipalActivity"
        android:text="Ingresar"
        android:textColor="#0E0E0E" />

    <Button
        android:id="@+id/recuperarContraseña"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingresar"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F6FBF9"
        android:text="Recuperar Contraseña"
        android:textColor="#0B0A0A" />

    <Button
        android:id="@+id/registrarse"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/recuperarContraseña"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F6FBF9"
        android:text="Registrarse"
        android:textColor="#0B0A0A" />




</RelativeLayout>